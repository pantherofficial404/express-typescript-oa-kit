{
    "name": "apani-dukaan",
    "version": "1.0.0",
    "main": "./src/bin/www.ts",
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.0.3",
        "@types/supertest": "^2.0.10",
        "chai": "^4.2.0",
        "mocha": "^8.2.0",
        "rimraf": "^3.0.2",
        "supertest": "^6.0.0",
        "ts-loader": "^8.0.7",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3",
        "tslint-consistent-codestyle": "^1.16.0",
        "tslint-defocus": "^2.0.6",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-origin-ordered-imports-rule": "^1.3.0-0",
        "typescript": "^4.0.5",
        "webpack-cli": "^4.1.0",
        "webpack-shell-plugin-next": "^2.0.2"
    },
    "scripts": {
        "test": "TS_NODE_PROJECT=config/test/tsconfig.test.json mocha -r ts-node/register test/**/*.test.ts",
        "clean": "rimraf ./build/* && rimraf ./logs/*",
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
        "lint:fix": "tslint -c tslint.json 'src/**/*.ts' --fix",
        "build:routes": "tsoa spec-and-routes",
        "build:app": "webpack",
        "build": "yarn clean && yarn lint && yarn build:routes && yarn run build:app",
        "start:dev": "NODE_ENV=development yarn build",
        "run:dev": "pm2 start ./config/pm2/pm2-dev-process.config.js",
        "start:prod": "NODE_ENV=production yarn build",
        "run:prod": "pm2 start ./config/pm2/pm2-prod-process.config.js",
        "monitor": "pm2 monit",
        "logs": "pm2 logs api-rest --lines 2000",
        "stop": "pm2 delete api-rest && yarn clean"
    },
    "dependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/config": "^0.0.36",
        "@types/express": "^4.17.8",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/swagger-ui-express": "^4.1.2",
        "@types/webpack": "^4.41.24",
        "body-parser": "^1.19.0",
        "config": "^3.3.2",
        "express": "^4.17.1",
        "fork-ts-checker-webpack-plugin": "^5.2.1",
        "jsonwebtoken": "^8.5.1",
        "swagger-ui-express": "^4.1.4",
        "tsoa": "^3.4.0",
        "webpack": "^5.3.1",
        "webpack-node-externals": "^2.5.2",
        "winston": "^3.3.3"
    }
}